package main

import (
	"fmt"
	"github.com/charmbracelet/lipgloss"
)

var (
	purple = lipgloss.Color("")
	darkBG = lipgloss.Color("#282828")
	style  = lipgloss.NewStyle().
		Bold(true).
		Border(lipgloss.DoubleBorder()).
		BorderForeground(purple).
		Foreground(purple).
		PaddingTop(2).
		PaddingLeft(4).
		Width(90).
		Height(31)
)

func main() {

	fmt.Println(style.Render("Hello, kitty"))
}
